<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PCSX2GridView.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:PCSX2GridView.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PCSX2GridView.Views.MainWindow"
        Icon="/Assets/ps2.ico"
        Title="PCSX2 Library Browser">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  Name="MyScrollViewer">
        <ItemsControl Margin="0" Items="{Binding Games}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"
                               Margin="3"
                               Width="{Binding ElementName=MyScrollViewer, Path=Bounds.Width}" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <views:LibraryView Margin="0 0 5 5" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</Window>
